<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Bar Check</title>
</head>

<body>
    <nav>
        <div class="nav-wrapper cyan darken-4">
            <div class="container">
                <a href="/bars">Bar Check</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li class="space-between">
                        <% if (user) { %>
                        <a href="/logout">Log Out</a>
                    <li><a href="/bars/new">Add a Bar</a></li>
                    <% } else { %>
                    <a href="/auth/google">Login with Google</a>
                    <% } %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <section id="show-page">
        <div>Bar Name: </div>
        <div><%= bar.name %></div>
        <div>Location: </div>
        <div><%= bar.location %></div>
        <div>Description: </div>
        <div><%= bar.description %></div>
        <div>Posted By</div>
        <div><%= bar.poster %></div>
        <div>Drinks:</div>
    </section>

    <form action="/bars/<%= bar._id %>/drinks" method="POST">
       <% drinks.map(function(drink) { %>
        <label>
            <input name="drinkId" type="checkbox" value="<%= drink._id %>"/>
            <span><%= drink.name %></span>
          </label>
        <% }) %>
        <button value="Validate" type="submit">Add Drink to Bar</button>
    </form>
    <section>
        <% bar.drinks.forEach(function(drink, num) { %>
        <li><%= drink.name %></li>
        <li><%= drink.ingredients %></li>
        <li><%= drink.description %></li>
        <form action="/bars/<%= bar._id %>/drinks/<%= num %>?_method=DELETE" method="POST">
            <button type="submit" >Delete Drink</button>
        </form>
        <% }) %>
    </section>
    <a href="/drinks/new">Add drink</a>
    <a href="/bars/<%= bar._id %>/edit">Edit Bar</a>
    </form>
    <form action="/bars/<%= bar._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete Bar</button>
    </form>
</body>

</html>
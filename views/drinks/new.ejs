<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Bar Check</title>
</head>

<body>
    <header>
        <nav>
            <div class="nav-wrapper black">
                <div class="container">
                    <a href="/bars">Bar Check</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li class="right">
                            <% if (user) { %>
                            <a href="/logout">Log Out</a>
                            <% } else { %>
                            <a href="/auth/google">Login with Google</a>
                            <% } %>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <form id="new-form" action="/drinks" method="POST">
                <label>Drink Name:</label>
                <input autocomplete="off" type="text" name="name">
                <label>Ingredients:</label>
                <input autocomplete="off" type="text" name="ingredients">
                <div class="section center">
                <button class="btn waves-effect waves-light blue lighten-3" type="submit">Add Drink
                    <i class="material-icons right">local_bar</i>
                </button>
            </div>
            </form>
        </div>
        <div class="divider"></div>
        <div class="container">
            <div class="row">
                <% drinks.forEach(function(drink) { %>
                <div class="col s12 m4">
                    <div class="card small blue lighten-3">
                        <div class="card-content">
                            <span class="card-title"><%= drink.name %></span>
                            <p><%= drink.ingredients %></p>
                        </div>
                        <% if (user) { %>
                        <div class="card-action">
                            <form action="/drinks/<%= drink._id %>?_method=DELETE" method="POST">
                                <button class="waves-effect waves-light btn-small red lighten-3" type="submit">Delete Drink
                                    <i class="material-icons right">delete</i>
                                </button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </main>
</body>

</html>